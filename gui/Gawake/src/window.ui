<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GawakeWindow" parent="GtkApplicationWindow">
    <property name="default-width">700</property>
    <property name="default-height">600</property>
    <property name="title" translatable="no">Gawake</property>

    <child type="titlebar">
      <object class="GtkHeaderBar" id="header_bar">
        <property name="title-widget">
          <object class="GtkStackSwitcher" id="stack_switcher">
            <property name="stack">stack</property>
          </object>
        </property>

        <child type="end">
          <object class="GtkMenuButton">
            <property name="icon-name">open-menu-symbolic</property>
            <property name="menu-model">primary_menu</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="GtkBox" id="body">
        <child>
          <object class="GtkStack" id="stack">
            <!-- PAGE: TURN ON RULES -->
             <child>
               <object class="GtkStackPage">
                 <property name="name">on</property>
                 <property name="title" translatable="yes">Turn on rules</property>
                 <!-- <property name="use-underline">True</property> -->
                 <!-- <property name="icon_name">arrow3-up-symbolic</property> -->
                 <property name="child">
                   <object class="GtkLabel">
                     <property name="label">Turn on</property>
                     <property name="vexpand">true</property>
                     <property name="hexpand">true</property>
                     <style>
                       <class name="title-1"/>
                     </style>
                   </object>
                 </property>
               </object>
             </child>

            <!-- PAGE: TURN OFF RULES -->
             <child>
               <object class="GtkStackPage">
                 <property name="name">off</property>
                 <property name="title" translatable="yes">Turn off rules</property>
                 <!-- <property name="use-underline">True</property> -->
                 <!-- <property name="icon-name">system-shutdown-symbolic</property> -->
                 <property name="child">
                   <object class="GtkLabel">
                     <property name="label">Turn off</property>
                     <property name="vexpand">true</property>
                     <property name="hexpand">true</property>
                     <style>
                       <class name="title-1"/>
                     </style>
                   </object>
                 </property>
               </object>
             </child>

          </object>
        </child>
      </object>
    </child>
  </template>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Gawake</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
